{% extends 'base.html.twig' %}

{% block title %}
	{% if creationMode == false %}
		Edit Pokemon
	{% else %}
		Add Pokemon
	{% endif %}
{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block body %}
	<h1 class="text-center mt-5">
		{% if creationMode == false %}
			Edit Pokemon
		{% else %}
			Add Pokemon
		{% endif %}
	</h1>
	{{ form_start(form)}}
	<div class="container mb-5">
		<div class="row">
			<div class="col-6">
				{% if creationMode == false %}
					<img style="max-width: 200px" src="{{ asset('uploads/images/pokemon/' ~ pokemon.image) }}">

				{% endif %}

				{{form_row(form.name, {'attr': {'class': 'bg-light m-2'}})}}
				{{form_row(form.type, {'attr': {'class': 'bg-light m-2'}})}}
				{{form_row(form.canEvolve, {'attr': {'class': 'bg-light m-2'}})}}
				{{form_row(form.catagory)}}


				{% if creationMode == true %}
					{{form_row(form.image, {'attr': {'required': 'required'}})}}
				{% else %}
					{{form_row(form.image, {'attr': {'class': 'bg-light m-2'}})}}
				{% endif %}


				<button class="btn btn-danger" type="submit">
					{% if creationMode == false %}
						Edit Pokemon
					{% else %}
						Add Pokemon
					{% endif %}
				</button>
				<a href="{{path('pokemon')}}" class="btn btn-info">Home</a>
			</div>
		</div>
	</div>


	{{ form_end(form)}}
{% endblock %}
